# Production Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
DB_NAME=retail_inventory
DB_USERNAME=retail_user
DB_PASSWORD=your_secure_db_password_here
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# API Configuration
SPRING_API_PORT=8080
ML_API_PORT=8000
FRONTEND_PORT=3000

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_256_bits

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# External API Keys (Optional)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
LIGHTSPEED_API_KEY=your_lightspeed_api_key
SQUARE_API_KEY=your_square_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# SSL Configuration (Optional)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
